#******************************************************************************#
#								  CONFIGURATION				       			   #
#******************************************************************************#
NAME = philo
CC = cc
CFLAGS = -g3 -Wall -Wextra -Werror
#CFLAGS = -g3 -Wall -Wextra -Werror -pthread
HEADER = -I ./include

#******************************************************************************#
#				     				FILES      								   #
#******************************************************************************#
FILES = \
	philo.c\
	page_philo.c\
	validations.c\
	philo_utils.c\
	error.c\

OBJS = $(FILES:.c=.o)

#******************************************************************************#
#				     				RULES      								   #
#******************************************************************************#
all: $(NAME)

$(NAME): $(OBJS)
	@$(CC) $(CFLAGS) $(OBJS) $(HEADER) -o $(NAME)

clean:
	@rm -rf $(OBJS)

fclean: clean
	@rm -rf $(NAME)

re: fclean all

.PHONY: all clean fclean re