#******************************************************************************#
#								  CONFIGURATION				       			   #
#******************************************************************************#
NAME = philo
CC = cc
CFLAGS = -g3 -Wall -Wextra -Werror -pthread
HEADER = -I ./include/

#******************************************************************************#
#				     				FILES      								   #
#******************************************************************************#
FILES = \
	philo.c\
	validations.c\

OBJS = $(FILES:.c=.o)

#******************************************************************************#
#				     				RULES      								   #
#******************************************************************************#

all: $(NAME)

$(NAME): $(OBJS)
	$(CC) $(CFLAGS) $(HEADER) $(OBJS) -o $(NAME)

clean:
	rm -rf $(OBJS)

fclean: clean
	rm -rf $(NAME)

re: fclean all

.PHONY: all clean fclean re